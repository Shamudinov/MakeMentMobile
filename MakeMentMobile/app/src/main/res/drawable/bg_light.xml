<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" android:state_focused="true">
    <shape>
        <solid android:color="#5F5F5F"/>
        <stroke
            android:width="328dp"
            android:height="40dp"
            android:color="#5F5F5F"
            android:alpha="0.12" />
        <corners
            android:radius="6dp" />
    </shape>
</item>

<item android:state_pressed="true" android:state_focused="false">
<shape>
    <solid android:color="#5F5F5F"/>
    <stroke
        android:width="328dp"
        android:height="40dp"
        android:color="#5F5F5F"
        android:alpha="0.12" />
    <corners
        android:radius="15dp" />
</shape>
</item>

<item android:state_pressed="false" android:state_focused="true">
<shape>
    <solid android:color="#5F5F5F"/>
    <stroke
        android:width="328dp"
        android:height="40dp"
        android:color="#5F5F5F"
        android:alpha="0.12" />
    <corners
        android:radius="6dp" />
</shape>
</item>

<item android:state_pressed="false" android:state_focused="false">
<shape>
    <gradient
        android:startColor="#5F5F5F"
        android:centerColor="#5F5F5F"
        android:endColor="#5F5F5F"
        android:angle="270"
        android:width="328dp"
        android:height="40dp"
        android:alpha="0.12"
        />
    <stroke
        android:width="0.7dp"
        android:color="#5F5F5F"
        android:alpha="0.12"/>
    <corners
        android:radius="6dp" />
</shape>
</item>

<item android:state_enabled="true">
<shape>
    <padding
        android:left="16dp"
        android:top="4dp"
        android:right="16dp"
        android:bottom="4dp"
        />
</shape>
</item>

    </selector>